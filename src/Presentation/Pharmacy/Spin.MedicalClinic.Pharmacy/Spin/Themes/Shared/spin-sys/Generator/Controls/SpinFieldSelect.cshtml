@model SpinFieldSelect
@using Spin.Modules.Entity.Backend.Generator.Select
@using Spin.Modules.Entity
@{

}

@if (Model.InputType == Spin.Modules.Entity.Backend.Generator.Select.InputType.Calendar)
{
    <input type='text' id="@(Model.Name )" ui-date="dateOptions" ng-model='@(Model.Name.FirstCharacterToLower() )' ng-focus="selectedInput('#@(Model.Name.FirstCharacterToLower() )')" ng-blur="selectedInput('#@(Model.Name.FirstCharacterToLower() )')" />
}
else
{
    <input type='text' id="@(Model.Name )" ng-model='@(Model.Name.FirstCharacterToLower())' ng-focus="selectedInput('#@(Model.Name.FirstCharacterToLower() )')" ng-blur="selectedInput('#@(Model.Name.FirstCharacterToLower() )')" />
}
