@{
    Spin.Modules.API.LanguageBL BL = new Spin.Modules.API.LanguageBL();

    //1. probar todo desde cdn
    //2. utilitarios para imagenes y otros archivos
    //3. unificar css y quitar bloqueos
}
<!DOCTYPE html>
<html>
<head>
    <title>CMS Framework</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href='@SpinViewPage.ValidateURL("/lib/font-awesome/css/all.min.css")' rel="stylesheet" type="text/css">
    <link href='@SpinViewPage.ValidateURL("/lib/bootstrap/dist/css/bootstrap.min.css")' rel="stylesheet" async />
    <link href='@SpinViewPage.ValidateURL("/Spin/Themes/SpinTheme/Resource/css/SpinTheme.css")' rel="stylesheet" async />
    <link href='@SpinViewPage.ValidateURL("/Spin/Themes/SpinTheme/Resource/css/SpinTheme-media.css")' rel="stylesheet" async />

    @SpinViewPage.Styles.Render()
</head>
<body>
    <div id="wrapper" class="wrapper">
        <header>
            <div class="row no-gutters justify-content-end">
                <div class="col-4 col-md-2">
                    <a href="https://dev.cmsspin.com" target="_blank">
                        <img class="img-logo" src="/spin-sys/dist/img/logo-spin-color.png" />
                    </a>
                </div>
                <div class="col-4">
                    <div class="language-top">
                        <a href="?ui-culture=en">EN</a>
                        @foreach (var ItemLang in BL.SelectAll())
                        {
                            @("|") <a href="?ui-culture=@(ItemLang.Code.ToLower())">@(ItemLang.Code.ToUpper()) </a>
                        }
                    </div>

                </div>
            </div>
        </header>
        <main>
            @RenderBody()
            <footer>
                <div class="row no-gutters  justify-content-center">
                    <div class="col-12">
                        @CompanyFactory.Information.Name VS @CompanyFactory.Information.Version (@(CompanyFactory.Information.TypeVersion)) | © @DateTime.Now.Year @CompanyFactory.Information.Copyright
                    </div>
                </div>
            </footer>
        </main>

    </div>

    <script src='@(SpinViewPage.ValidateURL("/lib/jquery/dist/jquery.min.js"))' ></script>
    @SpinViewPage.JavaScripts.Render()
</body>
</html>
